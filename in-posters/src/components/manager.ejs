<!DOCTYPE html>
<html lang="en">
  <head>
    <script type="text/javascript">
    $('.flip').hover(function(){
    $(this).find('.card').toggleClass('flipped');
    });
    </script>
  </head>
  <body>
    <div class="container-fluid" id="users">
      <div class="title">
        <h1>Users</h1>
        <a href="#addUserModal" class="icon" data-toggle="modal">
          <i class="fa fa-user-plus" title="add new user"></i>
        </a>
        <a href="#users" class="icon">
          <i class="fa fa-refresh" title="refresh" onclick="loadUsers()"></i>
        </a>
      </div>
      <div class="row">
        <% usersArray.forEach(function(user) { %>
        <div class="col-sm-3">
          <div class="flip">
            <div class="card">
              <div class="face front">
                <div class="inner card-header">
                  <img id="user-img" src="images/teddy_bear.jpg"></img>
                  <h3 class="card-title"><%= user.fullname.fname + " " + user.fullname.lname %></h3>
                  <h5 class="text-muted"><%= user.category %></h5>
                </div>
              </div>
              <div class="face back">
                <div class="inner">
                  <h5><%= user.address.street + ", " + user.address.city + ", " + user.address.state %></h5>
                  <h5><%= user.mail %></h5>
                  <h5><%= user.phone %></h5>
                  <h6><strong>User Name: </strong><%= user.user_name %></h6>
                  <h6><strong>Password: </strong><%= user.password %></h6>
                  <h6><strong>Branch Number: </strong><%= user.bnumber == "null" ? "-" : user.bnumber %></h6>
                  <a href="#updateUserModal" class="card-link" data-toggle="modal" data-username-id="<%= user.user_name %>"
																				   data-password-id="<%= user.password %>"
																				   data-first-id="<%= user.fullname.fname %>"
																				   data-last-id="<%= user.fullname.lname %>"
																				   data-street-id="<%= user.address.street %>"
																				   data-city-id="<%= user.address.city %>"
																				   data-state-id="<%= user.address.state %>"
																				   data-phone-id="<%= user.phone %>"
																				   data-mail-id="<%= user.mail %>"
																				   data-category-id="<%= user.category %>"
																				   data-branch-id="<%= user.bnumber == "null" ? "-" : user.bnumber %>">
                    <i class="fa fa-edit" title="update user details"></i>
                  </a>
                  <a href="#deleteUserModal" class="card-link" data-toggle="modal" data-username-id="<%= user.user_name %>"
																				   data-password-id="<%= user.password %>">
                    <i class="fa fa-trash" title="delete user"></i>
                  </a>
                  <a href="#ChangeStatusUserModal" class="card-link" data-toggle="modal" data-username-id="<%= user.user_name %>"
					 data-password-id="<%= user.password %>">
                    <i class="fa fa-vcard" title="change status"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
	<!-- Modal HTML -->
			<div id="addUserModal" class="modal fade">
				<div class="modal-dialog modal-login">
					<div class="modal-content">
						<div class="modal-header">
							<h4 class="modal-title">Add User</h4>
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						</div>
						<div class="modal-body">
							<form>
								<div class="form-group">
									<input type="text" class="form-control" id="user_name_user" placeholder="User Name" required="required" autofocus>
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="password_user" placeholder="Password" required="required" style="text-security:disc; -webkit-text-security:disc;">
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="fname_user" placeholder="First Name" required="required">
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="lname_user" placeholder="Last Name" required="required">
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="street_user" placeholder="Street" required="required">
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="city_user" placeholder="City" required="required">
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="state_user" placeholder="State" required="required">
								</div>
								<div class="form-group">
									<input type="tel" class="form-control" id="phone_user" placeholder="Phone" required="required"
									pattern="[0-9]{3}-[0-9]{7}">
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="mail_user" placeholder="Mail" required="required">
								</div>
								<div class="form-group">
									<select id="category_user" class="form-control" onchange="showBranchNumberSelect.call(this, event)">
										<option selected disabled>User Type</option>
										<option value="customer">Customer</option>
										<option value="worker">Worker</option>
										<option value="manager">Manager</option>
									</select>
								</div>
								<div class="form-group">
									<select id="bnumber_select_user"  class="form-control" style="display: none;">
										<option selected disabled>Branch Number</option>
									</select>
								</div>
								<div class="form-group">
									<button id="addUserButton" type="button" class="btn btn-primary btn-lg btn-block login-btn" onclick="addUser()">Add</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			
			<div id="updateUserModal" class="modal fade">
				<div class="modal-dialog modal-login">
					<div class="modal-content">
						<div class="modal-header">
							<h4 class="modal-title">Update User</h4>
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						</div>
						<div class="modal-body">
							<form>
								<div class="form-group">
									<input type="text" class="form-control" id="user_name_user_update" name="user_name_user_update" placeholder="User Name" required="required" autofocus disabled>
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="password_user_update" name="password_user_update" placeholder="Password" required="required" style="text-security:disc; -webkit-text-security:disc;" disabled>
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="fname_user_update" name="fname_user_update" disabled>
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="lname_user_update" name="lname_user_update" disabled>
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="street_user_update" name="street_user_update" placeholder="Street" required="required">
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="city_user_update" name="city_user_update" placeholder="City" required="required">
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="state_user_update" name="state_user_update" placeholder="State" required="required">
								</div>
								<div class="form-group">
									<input type="tel" class="form-control" id="phone_user_update" name="phone_user_update" placeholder="Phone Number" required="required"
									pattern="[0-9]{3}-[0-9]{7}">
								</div>
								<div class="form-group">
									<input type="text" class="form-control" id="mail_user_update" name="mail_user_update" placeholder="Mail" required="required">
								</div>
								<div class="form-group">
									<button id="updateUserButton" type="button" class="btn btn-primary btn-lg btn-block login-btn" onclick="updateUser()">Update</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			
			<div id="deleteUserModal" class="modal fade">
				<div class="modal-dialog modal-login">
					<div class="modal-content">
						<div class="modal-header">
							<h4 class="modal-title">Delete User</h4>
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						</div>
						<div class="modal-body">
							<form>
								<div class="form-group">
									Are you sure you want to delete this user?<br><br>
									<button id="deleteUserButton" type="button" class="btn btn-primary btn-lg btn-block login-btn" onclick="deleteUser()">Delete</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			
			<div id="ChangeStatusUserModal" class="modal fade">
				<div class="modal-dialog modal-login">
					<div class="modal-content">
						<div class="modal-header">
							<h4 class="modal-title">Change User Status</h4>
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						</div>
						<div class="modal-body">
							<form>
								<div class="form-group">
									<select id="category_change_user_status" name= "category_change_user_status"  class="form-control" onchange="showBranchNumberSelectChangeStatus.call(this, event)">
										<option selected disabled>User Type</option>
										<option value="customer">Customer</option>
										<option value="worker">Worker</option>
										<option value="manager">Manager</option>
									</select>
								</div>
								<div class="form-group">
									<select  id="bnumber_select_change_status" name="bnumber_select_change_status" class="form-control" style="display: none;">
										<option selected disabled>Branch Number</option>
									</select>
								</div>
								<div class="form-group">
									<button id="changeStatusUserButton" type="button" class="btn btn-primary btn-lg btn-block login-btn" onclick="changeStatusUser()">Change</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
  </body>
</html>